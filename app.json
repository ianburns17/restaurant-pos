{
  "expo": {
    "name": "Restaurant POS",
    "slug": "restaurant-pos",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.ianburns.restaurantpos"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ianburns.restaurantpos",
      "permissions": [
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for scanning items."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for barcode scanning."
        }
      ],
      [
        "expo-print",
        {
          "printPermission": "Allow $(PRODUCT_NAME) to print receipts."
        }
      ]
    ],
    "scheme": "restaurantpos",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "description": "Mobile Point of Sale System for restaurants - manage orders, payments, and inventory on the go.",
    "extra": {
      "eas": {
        "projectId": "restaurant-pos"
      }
    }
  }
}
